@model SV20T1020580.DomainModels.Supplier
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post">

            @* <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" /> *@
            @Html.HiddenFor(m=>m.SupplierID)

            <div class="form-group">
                <label> Tên nhà cung cấp</label>
                @Html.TextBoxFor(m=>m.SupplierName,new{@class ="form-control",@autofocus="autofocus"})
                @Html.ValidationMessageFor(m=>m.SupplierName,"",new {@style="color:#f00"})
                @* <input type="text" name="@nameof(Model.SupplierName)" class="form-control" autofocus value="@Model.SupplierName"> *@
            </div>

            <div class="form-group">
                <label> Tên giao dịch</label>
                @Html.TextBoxFor(m=>m.ContactName,new{@class ="form-control"})
                @Html.ValidationMessageFor(m=>m.ContactName,"",new {@style="color:#f00"})
                @* <input type="text" name="ContactName" class="form-control" value="@Model.ContactName"> *@
            </div>

            <div class="form-group">
                <label> Điện thoại</label>
                @Html.TextBoxFor(m=>m.Phone,new{@class ="form-control"})
                @Html.ValidationMessageFor(m=>m.Phone,"",new {@style="color:#f00"})
                @* <input type="text" name="Phone" class="form-control" value="@Model.Phone"> *@
            </div>

            <div class="form-group">
                <label> Email</label>
                @Html.TextBoxFor(m=>m.Email,new{@class ="form-control"})
                @Html.ValidationMessageFor(m=>m.Email,"",new {@style="color:#f00"})
                @* <input type="email" name="Email" class="form-control" value="@Model.Email"> *@
            </div>

            <div class="form-group">
                <label> Địa chỉ</label>
                @Html.TextBoxFor(m=>m.Address,new{@class ="form-control"})
                @Html.ValidationMessageFor(m=>m.Address,"",new {@style="color:#f00"})
                @* <input type="text" name="Address" class="form-control" value="@Model.Address"> *@
            </div>

            <div class="form-group">
                <label> Tỉnh/thành</label>
                @*  <select class=" form-control" name="Province">
                <option>--Chọn tỉnh/thành--</option>
                @foreach (var item in SV20T1020580.BusinessLayers.CommonDataService.ListOfProvinces())
                {
                if (item.ProvinceName == Model.Province)
                {
                <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                }
                else
                {
                <option value="@item.ProvinceName">@item.ProvinceName</option>
                }
                }

                </select> *@
                @Html.DropDownListFor(m=>m.Province,SelectListHelper.Provinces(),new{@class="form-control"})
                @Html.ValidationMessage("Province",new{@style="color:#f00"})
            </div>

            <div class="form-group">
                <label>Ngày Thành Lập:</label>

                <input type="hidden" class="form-control " name="@nameof(Model.NgayThanhLap)" value="@Model.NgayThanhLap" />
                <input type="text" class="form-control date-picker" name="NTLInput"
                       value="@Model.NgayThanhLap.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en-GB"))" />
                @Html.ValidationMessageFor(m=>m.NgayThanhLap,"",new {@style="color:#f00"})

            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floop-o"> Lưu dữ liệu</i>
                </button>
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
