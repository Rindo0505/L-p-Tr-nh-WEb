@model SV20T1020580.DomainModels.Shipper
@{
    ViewBag.Titel = "Xóa người giao hàng";
}
<div class="box box-danger">
    <div class="box-body">
        <form action="~/Shipper/Delete/@Model.ShipperID" method="post">

            <div class="form-group">
                <label> Tên người giao hàng</label>
                <p class="form-control-static">@Model.ShipperName</p>
            </div>

            <div class="form-group">
                <label> Điện thoại</label>
                <p class="form-control-static">@Model.Phone</p>
            </div>

            <div class="form-group">
                @if (!SV20T1020580.BusinessLayers.CommonDataService.IsUsedShipper(Model.ShipperID))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-floop-o"> Xóa dữ liệu</i>
                    </button>
                }
                <a href="~/Shipper" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
