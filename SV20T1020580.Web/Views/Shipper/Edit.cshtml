@model SV20T1020580.DomainModels.Shipper
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Shipper/Save" method="post">

            @* <input type="hidden" name="@nameof(Model.ShipperID)" value="@Model.ShipperID"/> *@
            @Html.HiddenFor(m=>m.ShipperID)

            <div class="form-group">
                <label> Tên người giao hàng</label>
                @* <input type="text" name="@nameof(Model.ShipperName)" class="form-control" autofocus value="@Model.ShipperName"> *@
                @Html.TextBoxFor(m=>m.ShipperName,new{@class ="form-control",@autofocus="autofocus"})
                @Html.ValidationMessageFor(m=>m.ShipperName,"",new {@style="color:#f00"})
            </div>

            <div class="form-group">
                <label> Điện thoại</label>
                @* <input type="text" class="form-control" name="Phone" value="@Model.Phone"> *@
                @Html.TextBoxFor(m=>m.Phone,new {@class ="form-control"})
                @Html.ValidationMessageFor(m=>m.Phone,"",new {@style="color:#f00"})
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floop-o"> Lưu dữ liệu</i>
                </button>
                <a href="~/Shipper" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
