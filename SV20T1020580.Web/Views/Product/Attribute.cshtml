@model SV20T1020580.DomainModels.ProductAttribute

@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="~/Product/AddAttribute">
            @Html.HiddenFor(p => p.ProductId)
            @Html.HiddenFor(p => p.AttributeId)

            <div class="form-group">
                <label class="control-label col-sm-2">Tên thuộc tính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(c => c.AttributeName, new{ @class="form-control", @autofocus="autofocus" })
                    @Html.ValidationMessageFor(m => m.AttributeName, "", new {@style="color:red"})
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá trị thuộc tính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(c => c.AttributeValue, new{ @class="form-control" })
                    @Html.ValidationMessageFor(m => m.AttributeValue, "", new {@style="color:red"})
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.DisplayOrder, new { @class="form-control"})
                    @Html.ValidationMessageFor(m => m.DisplayOrder, "", new { @style = "color: #f00;" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a href="~/Product/Edit/@Model.ProductId" class="btn btn-default">
                        Quay lại
                    </a>
                </div>
            </div>
            <div class="mt-3">
                @Html.ValidationMessage("Error", new { @style = "color:#f00" })
            </div>
        </form>

    </div>
</div>