@model SV20T1020580.DomainModels.Category
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post">

            @* <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID" /> *@
            @Html.HiddenFor(m=>m.CategoryID)

            <div class="form-group">
                <label> Tên loại hàng</label>
                @Html.TextBoxFor(m=>m.CategoryName, new{@class =" form-control", @autofocus="autofocus"})
                @Html.ValidationMessageFor(m=>m.CategoryName,"",new{@style ="color: #f00"})
                @* <input type="text" name="@nameof(Model.CategoryName)" class="form-control" autofocus value="@Model.CategoryName"> *@
            </div>

            <div class="form-group">
                <label> Mô tả</label>
                @Html.TextBoxFor(m=>m.Description, new{@class =" form-control"})
                @Html.ValidationMessageFor(m=>m.Description,"",new{@style ="color: #f00"})
                @* <input type="text" name="Description" class="form-control" value="@Model.Description"> *@
            </div>

           
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floop-o"> Lưu dữ liệu</i>
                </button>
                <a href="~/Category" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
